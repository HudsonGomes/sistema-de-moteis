<h2>Lista de motéis</h2>
<hr/>
<% if @moteis.empty? %>
  <p>Não existem motéis cadastrados</p>
<% else %>
  <div class="well">
    <table class="table table-striped table-bordered datatable">
      <tr>
        <th>Nome</th>
        <th>telefone principal</th>
        <th>telefone secundário</th>
        <th>Cidade</th>
        <th>UF</th>
      </tr>

      <% @moteis.each do |motel| %>
        <tr>
          <td><%= link_to motel.nome, motel_path(motel) %></td>
          <td><%= motel.telefone1%></td>
          <td><%= verifica_telefone_secundario(motel)%></td>
          <td><%= motel.cidade %></td>
          <td><%= motel.uf %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>

<hr />

<%= link_to 'Cadastrar Motel', new_motel_path, :class => 'btn btn-inverse' %>
<%= link_to 'Gerar XML', url_for(:controller => 'moteis', :action => 'listagem_xml', :format => 'xml'), :class => 'btn btn-inverse' %>
