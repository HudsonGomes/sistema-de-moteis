<% if @suites.any? %>
  <div class="well">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Valor</th>
      </tr>

      <% @suites.each do |suite| %>
        <tr>
          <td><%= link_to suite.nome, suite_path(suite) %></td>
          <td><%= suite.descricao %></td>
          <td><%= suite.valor %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% else %>
  <div>
    <p>Não existem suítes cadastradas para esse motel</p>
  </div>
<% end %>

<%= link_to 'Cadastrar Suíte', new_suite_path, :class => 'btn btn-inverse' %>
