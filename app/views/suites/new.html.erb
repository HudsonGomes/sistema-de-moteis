<h1>Cadastrar Suíte</h1>
<hr/>
<%= form_for(@suite) do |f| %>
  <% if @suite.errors.any? %>
    <div id="error_explanation">
      <h2>Não foi possível cadastrar motel</h2>
      <hr/>
      <ul>
        <% @suite.errors.messages.values.each do |msg| %>
          <li><%= msg[0] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span12">
      <div class="span3">
        <%= f.label :nome, 'Nome:' %>
        <%= f.text_field :nome %>
      </div>
      <div class="span3">
        <%= f.label :descricao, 'Descrição:' %>
        <%= f.text_area :descricao %>
      </div>
      <div class="span3">
        <%= f.label :valor, 'Valor:' %>
        <%= f.text_field :valor %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Cadastrar Suíte', :class => 'btn btn-inverse'%>
  </div>
<% end %>

