<h2>Sugestões</h2>
<hr/>
<div class="well">
  <% if @sugestoes.empty? %>
  <h4>Não há sugestões</h4>
  <% else %>
  <table class="table table-condensed table-bordered table-striped">
    <thead>
    <th>Nome</th>
    <th>Email</th>
    <th>Sugestão</th>
    <th>Ação</th>
    </thead>
    <tbody>
      <% @sugestoes.each do |sugestao|  %>
      <tr>
        <td><%= sugestao.nome %></td>
        <td><%= sugestao.email %></td>
        <td><%= sugestao.mensagem %></td>
        <td><%= link_to "Excluir", {:action => :destroy, :id => sugestao.id}, :method => :delete, :confirm => 'Tem certeza que deseja excluir?'  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>
